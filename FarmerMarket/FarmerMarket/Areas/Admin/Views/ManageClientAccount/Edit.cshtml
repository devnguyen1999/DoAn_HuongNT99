@model FarmerMarket.Models.TaiKhoan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Chỉnh sửa thông tin khách hàng</h3>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.TenTaiKhoan)
                            @Html.HiddenFor(model => model.MatKhau)
                            @Html.HiddenFor(model => model.Quyen)

                            <div class="form-group">
                                <label>Trạng thái</label>
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.TrangThai)
                                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.NgayTao, new { @Value = Model.NgayTao })
                            @Html.HiddenFor(model => model.HoTen)
                            @Html.HiddenFor(model => model.Email)
                            @Html.HiddenFor(model => model.SoDienThoai)
                            @Html.HiddenFor(model => model.DiaChi)
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="btn btn-primary" type="submit">
                                        Cập nhật
                                    </button>
                                    <a href="@Url.Action("Index","ManageClientAccount")" class="btn btn-link">Huỷ</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
