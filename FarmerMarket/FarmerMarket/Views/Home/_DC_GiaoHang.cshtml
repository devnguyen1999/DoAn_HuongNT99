@model FarmerMarket.Models.TaiKhoan

@if (Session["TaiKhoan"] != null)
{
    <div class="form-group">
        <input type="text" name="firstname" id="firstname" class="form-control bg-white" value="@Model.HoTen" placeholder="Họ tên*" />
    </div>
    <div class="form-group">
        <input type="text" id="mobile" name="mobile" value="@Model.SoDienThoai" placeholder="Điện Thoại *" class="form-control bg-white" />
    </div>
    <div class="form-group">
        <input type="text" id="address" name="address" value="@Model.DiaChi" class="form-control bg-white" placeholder="Địa chỉ*" />
    </div>
    <div class="form-group">
        <textarea class="form-control bg-white" style="height:50px" id="DcNhanHang" name="DcNhanHang" placeholder="Địa chỉ giao hàng*"></textarea>
    </div>
    <div class="form-group">
        <textarea class="form-control bg-white" style="height:100px" id="GhiChu" name="GhiChu" placeholder="Ghi chú*"></textarea>
    </div>


}
else
{

    <div class="form-group">
        <input type="text" name="firstname" id="firstname" class="form-control bg-white" value="@Model.HoTen" placeholder="Họ tên*" />
    </div>
    <div class="form-group">
        <input type="text" id="mobile" name="mobile" value="@Model.SoDienThoai" placeholder="Điện Thoại *" class="form-control bg-white" />
    </div>
    <div class="form-group">
        <input type="text" id="address" name="address" value="@Model.DiaChi" class="form-control bg-white" placeholder="Địa chỉ*" />
    </div>
    <div class="form-group">
        <textarea class="form-control bg-white" style="height:50px" id="DcNhanHang" name="DcNhanHang" placeholder="Địa chỉ giao hàng*"></textarea>
    </div>
    <div class="form-group">
        <textarea class="form-control bg-white" style="height:100px" id="GhiChu" name="GhiChu" placeholder="Ghi chú*"></textarea>
    </div>

}
